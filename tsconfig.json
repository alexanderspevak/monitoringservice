{
  "version": "2.1.1",
  "compilerOptions": {
      "lib": [ "es6", "dom"],
      "outDir": "build/compiled",
      "target": "es6",
      "module": "commonjs",
      "moduleResolution": "node",
      "importHelpers": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "sourceMap": true,
      "noImplicitAny": true,
      "declaration": true,
      "noFallthroughCasesInSwitch": true,
      "noImplicitReturns": true,
      "stripInternal": true,
      "pretty": true,
      "strictNullChecks": true,
      "noUnusedLocals": true,
      "downlevelIteration": true
  },
  "exclude": [
      "tmp",
      "temp",
      "build",
      "node_modules"
  ]
}